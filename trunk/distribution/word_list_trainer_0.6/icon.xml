<shortcuts>
  <programGroup defaultName="Word List Trainer\Word List Trainer"
                location="applications||startMenu"/>
  <shortcut
    name="Word List Trainer"
    target="$INSTALL_PATH/bin/launcher.bat"
    commandLine=""
    workingDirectory="$INSTALL_PATH/bin/"
    description="A program for language learning"
    iconFile="$INSTALL_PATH\Path\to\MyApplication\Icons\start.ico"
    iconIndex="0"
    initialState="noShow||normal||maximized||minimized"
    programGroup="yes||no"
    desktop="yes||no"
    applications="yes||no"
    startMenu="yes||no"
    startup="yes||no">

    <createForPack name="MyApplication Binaries"/>
    <createForPack name="MyApplication Batchfiles"/>
  </shortcut>
</shortcuts>

